{
    "name": "arc-fnh",
    "version": "0.0.23",
    "description": "A fresh new Architect project!",
    "scripts": {
        "lint": "eslint 'src/**/**.*js' --ignore-pattern node_modules  --fix",
        "start": "npx sandbox",
        "styles": "mkdir -p public/components/css && enhance ./css-config.json > ./public/components/css/styles.css",
        "test": "npm run lint & npm run test:unit",
        "test:unit": "tape 'test/**/*.js' | tap-arc"
    },
    "devDependencies": {
        "@architect/architect": "^11.0.13",
        "@architect/eslint-config": "^2.1.2",
        "@architect/plugin-lambda-invoker": "^2.0.0",
        "@architect/sandbox": "^6.0.5",
        "eslint": "^9.5.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.2",
        "prettier": "^3.1.1",
        "prettier-eslint": "^16.2.0",
        "tap-arc": "^1.2.2",
        "tape": "^5.7.2"
    },
    "dependencies": {
        "@architect/functions": "^8.1.6",
        "@enhance/ssr": "^4.0.2",
        "@enhance/styles": "^6.5.0",
        "@googleapis/sheets": "^2.0.1",
        "google-auth-library": "^7.14.1",
        "nanoid": "^5.0.4",
        "nodemailer": "^6.9.7",
        "tiny-json-http": "^7.5.1"
    },
    "eslintConfig": {
        "extends": [
            "@architect/eslint-config",
            "plugin:prettier/recommended"
        ],
        "plugins": [
            "prettier"
        ],
        "rules": {
            "func-style": "off",
            "prettier/prettier": [
                "error",
                {
                    "semi": false,
                    "singleQuote": true,
                    "tabWidth": 2,
                    "useTabs": false,
                    "trailingComma": "none",
                    "bracketSameLine": true
                }
            ]
        },
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },
        "env": {
            "es2021": true,
            "browser": true,
            "node": true
        }
    }
}
