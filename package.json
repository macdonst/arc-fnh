{
    "name": "arc-fnh",
    "version": "0.0.0",
    "description": "A fresh new Architect project!",
    "scripts": {
        "lint": "eslint 'src/**/**.*js' --ignore-pattern node_modules  --fix",
        "start": "npx sandbox",
        "styles": "mkdir -p public/components/css && enhance ./css-config.json > ./public/components/css/styles.css",
        "test": "npm run lint & npm run test:unit",
        "test:unit": "tape 'test/**/*.js' | tap-arc"
    },
    "devDependencies": {
        "@architect/architect": "^10.2.1",
        "@architect/eslint-config": "^2.0.1",
        "@architect/plugin-lambda-invoker": "^0.1.1",
        "eslint": "^8.11.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.6.0",
        "prettier-eslint": "^13.0.0",
        "tap-arc": "^0.1.2",
        "tape": "^5.5.2"
    },
    "dependencies": {
        "@architect/functions": "^5.0.5",
        "@enhance/ssr": "^2.0.3",
        "@enhance/styles": "^1.0.0",
        "arc-plugin-oauth": "^0.0.15",
        "google-auth-library": "^7.14.1",
        "nodemailer": "^6.7.3"
    },
    "eslintConfig": {
        "extends": [
            "@architect/eslint-config",
            "plugin:prettier/recommended"
        ],
        "plugins": [
            "prettier"
        ],
        "rules": {
            "func-style": "off",
            "prettier/prettier": [
                "error",
                {
                    "semi": false,
                    "singleQuote": true,
                    "tabWidth": 2,
                    "useTabs": false,
                    "trailingComma": "none",
                    "bracketSameLine": true
                }
            ]
        },
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },
        "env": {
            "es2021": true,
            "browser": true,
            "node": true
        }
    }
}
